{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@diary-server/*": [
        "src/diary-server/*"
      ],
      "@global-common/*": [
        "src/global-common/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
